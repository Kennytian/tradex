{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": [ "error", 4 ],
        "quotes": ["error", "single"],
        "no-unused-vars": 2,
        "no-console": 0,
        "no-debugger": 2
    }
}